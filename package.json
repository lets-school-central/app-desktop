{
	"name": "app-desktop",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"generate-xstate-typegen": "xstate typegen \".\\src\\lib\\machines\\*.ts\"",
		"prebuild": "npm run generate-xstate-typegen",
		"build": "vite build",
		"preview": "vite preview",
		"precheck": "npm run generate-xstate-typegen",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"postinstall": "npm run generate-xstate-typegen"
	},
	"devDependencies": {
		"@floating-ui/dom": "^1.5.1",
		"@skeletonlabs/skeleton": "^1.11.0",
		"@sveltejs/adapter-static": "1.0.0-next.50",
		"@sveltejs/kit": "^1.22.5",
		"@tailwindcss/forms": "^0.5.4",
		"@tailwindcss/typography": "^0.5.9",
		"@tauri-apps/api": "^1.4.0",
		"@tauri-apps/cli": "^1.4.0",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"@xstate/cli": "^0.5.2",
		"@xstate/svelte": "^2.1.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.32.4",
		"postcss": "^8.4.27",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^3.59.2",
		"svelte-check": "^3.5.0",
		"svelte-i18n": "^3.7.0",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.1",
		"typescript": "^5.1.6",
		"vite": "^4.4.9",
		"xstate": "^4.38.2"
	},
	"type": "module"
}
