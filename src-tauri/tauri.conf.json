{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "lets-school-central.app",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://github.com/LavaGang/MelonLoader/releases/download/**",
          "https://backend.lets-school-central.app/**"
        ]
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "removeFile": true,
        "exists": true,
        "scope": [
          "C:\\Program Files (x86)\\Steam\\steamapps\\common\\Let's School",
          "C:\\Program Files (x86)\\Steam\\steamapps\\common\\Let's School\\**"
        ]
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "lets-school-central.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "lets-school-central.app",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": true,
        "center": true,
        "minWidth": 500.0
      }
    ]
  }
}
